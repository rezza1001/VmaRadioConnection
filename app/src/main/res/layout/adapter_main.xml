<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_main"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="3dp"
        app:contentPadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txvw_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="123412"
                android:textColor="#002171"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txvw_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txvw_name"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:text="121271881"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/txvw_rssi"
                android:layout_alignTop="@+id/txvw_id"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textSize="14sp"
                android:textColor="#F42E3E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>